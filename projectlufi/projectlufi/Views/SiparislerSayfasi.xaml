<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projectlufi.Views.SiparislerSayfasi">

    

        

        <ListView x:Name="listview"
              >
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout HeightRequest="10" Orientation="Horizontal">
                        <Label Text="{Binding UrunId}"/>
                        <Image Source="{Binding UrunFoto}"/>
                        <Label Text="{Binding UrunAd}"/>
                        <Label Text="{Binding UrunBeden}"/>
                        <Label Text="{Binding UrunFiyat}"/>
                        <Label Text="{Binding UrunIndFiyat}" />
                     
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
        
    </ListView>
    
</ContentPage>